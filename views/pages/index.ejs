            <%= books[i].title %>
            <br>
          </li>
          <li><%= books[i].author %></li>
          <button id="details"><a href="/books/<%= books[i].id %>">View Details</a></button>
        </ul>
      <% } %>
  </main>
  <footer>
  </footer>
</body>

</html>